<Application x:Class="GestionCollectes.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:GestionCollectes.Presentation.Converters"
             xmlns:local="clr-namespace:GestionCollectes">

    <Application.Resources>
        <ResourceDictionary>

            <!-- 🟢 MergedDictionaries d'abord, toujours en haut ! -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Presentation/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- 🟢 Puis les converters, DataTemplates, etc. -->
            <conv:NullToBoolConverter x:Key="NullToBoolConverter"/>



        </ResourceDictionary>
    </Application.Resources>
</Application>