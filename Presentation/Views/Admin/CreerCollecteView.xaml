<UserControl x:Class="GestionCollectes.Presentation.Views.Admin.CreerCollecteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:GestionCollectes.Presentation.Views.Admin"
             xmlns:vm="clr-namespace:GestionCollectes.Presentation.ViewModels.Admin"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:CreerCollecteViewModel, IsDesignTimeCreatable=True}"
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Créer une Nouvelle Collecte" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Nom de la collecte:" Margin="0,5"/>
                <TextBox Text="{Binding Nom, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5"/>

                <TextBlock Text="Date de début:" Margin="0,5"/>
                <DatePicker SelectedDate="{Binding DateDebut}" Margin="0,0,0,5"/>

                <TextBlock Text="Date de fin:" Margin="0,5"/>
                <DatePicker SelectedDate="{Binding DateFin}" Margin="0,0,0,5"/>

                <TextBlock Text="Statut:" Margin="0,5"/>
                <ComboBox ItemsSource="{Binding StatutCollecteValues}" SelectedItem="{Binding SelectedStatut}" Margin="0,0,0,5}"/>

                <TextBlock Text="Description:" Margin="0,5"/>
                <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" AcceptsReturn="True" Height="80" Margin="0,0,0,5"/>

                <TextBlock Text="Objectif:" Margin="0,5"/>
                <TextBox Text="{Binding Objectif, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" AcceptsReturn="True" Height="60" Margin="0,0,0,5"/>

                <TextBlock Text="Centres participants:" FontWeight="SemiBold" Margin="0,10,0,5"/>
                <Button Content="Charger les Centres" Command="{Binding LoadCentresCommand}" Margin="0,0,0,5" Padding="5"/>
                <ListBox ItemsSource="{Binding AvailableCentres}" MaxHeight="200" BorderBrush="Gray" BorderThickness="1">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Content="{Binding Nom}" IsChecked="{Binding IsSelected}" Margin="2"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Créer la Collecte" Command="{Binding CreerCollecteCommand}" Padding="10,5" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</UserControl>
