<Application x:Class="GestionCollectes.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:GestionCollectes.Presentation.Converters"
             xmlns:view="clr-namespace:GestionCollectes.Presentation.Views.Admin"
             xmlns:admin="clr-namespace:GestionCollectes.Presentation.ViewModels.Admin"
             xmlns:vm="clr-namespace:GestionCollectes.Presentation.ViewModels"
             xmlns:local="clr-namespace:GestionCollectes">

    <Application.Resources>
        <ResourceDictionary>

            <!-- 🟢 MergedDictionaries d'abord, toujours en haut ! -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Presentation/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- 🟢 Puis les converters, DataTemplates, etc. -->
            <conv:NullToBoolConverter x:Key="NullToBoolConverter"/>

            <DataTemplate DataType="{x:Type vm:CollecteViewModel}">
                <view:CollectesView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type admin:CentresViewModel}">
                <view:CentresView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type admin:UtilisateursViewModel}">
                <view:UtilisateursView />
            </DataTemplate>


        </ResourceDictionary>
    </Application.Resources>
</Application>